<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="frame" stylesheets="@../style.css" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="175.0" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.2"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.group7.controllers.SearchController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <HBox alignment="CENTER_RIGHT">
        <Button mnemonicParsing="false" onAction="#toMenu" prefHeight="25.0" prefWidth="37.0" text="&lt;">
            <HBox.margin>
                <Insets right="40.0"/>
            </HBox.margin>
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
        <Label alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="116.0" text="Search Menu" underline="true">
            <font>
                <Font name="System Italic" size="16.0"/>
            </font>
        </Label>
    </HBox>
    <ComboBox fx:id="fieldBox" onAction="#enableMenu" prefHeight="25.0" prefWidth="179.0" promptText="Search Fields">
        <VBox.margin>
          <Insets top="15.0"/>
        </VBox.margin>
    </ComboBox>
    <TextField fx:id="inputField" disable="true" onKeyTyped="#validateText"/>
    <Label fx:id="errorLabel"/>
    <Button fx:id="searchButton" disable="true" mnemonicParsing="false" onAction="#searchInput" prefHeight="25.0"
            prefWidth="195.0" text="Search">
        <VBox.margin>
          <Insets top="15.0"/>
        </VBox.margin>
    </Button>
</VBox>
