<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.group7.controllers.FilterController">
   <children>
      <ScrollPane hbarPolicy="NEVER" prefHeight="500.0" prefWidth="175.0" VBox.vgrow="ALWAYS">
         <content>
            <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="501.0" prefWidth="160.0" spacing="15.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Button mnemonicParsing="false" onAction="#toMenu" prefHeight="25.0" prefWidth="37.0" text="&lt;">
                           <HBox.margin>
                              <Insets right="40.0" />
                           </HBox.margin>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font></Button>
                        <Label alignment="CENTER_RIGHT" maxWidth="-Infinity" prefHeight="25.0" prefWidth="100.0" text="Filter Menu" underline="true" HBox.hgrow="ALWAYS">
                           <font>
                              <Font name="System Italic" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox prefHeight="25.0" prefWidth="140.0">
                     <children>
                        <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#loadFilter" text="Load" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <Button alignment="CENTER_RIGHT" minWidth="-Infinity" mnemonicParsing="false" onAction="#clearFilter" text="Clear" />
                     </children>
                     <padding>
                        <Insets bottom="20.0" />
                     </padding>
                  </HBox>
                  <HBox prefHeight="25.0" prefWidth="155.0">
                     <children>
                        <DatePicker fx:id="datePicker" promptText="Date" />
                        <Button mnemonicParsing="false" onAction="#clearDate" text="X" />
                     </children>
                  </HBox>
                  <ComboBox fx:id="primaryBox" prefWidth="150.0" promptText="Primary Description" />
                  <ComboBox fx:id="locationBox" prefWidth="150.0" promptText="Location Description" />
                  <TextField fx:id="wardField" onKeyTyped="#activeValidate" promptText="Ward" />
                  <TextField fx:id="beatField" onKeyTyped="#activeValidate" promptText="Beat" />
                  <ComboBox fx:id="arrestBox" prefWidth="150.0" promptText="Arrest Made" />
                  <ComboBox fx:id="domesticBox" prefWidth="150.0" promptText="Domestic Incident" />
                  <HBox prefHeight="25.0" prefWidth="140.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <children>
                        <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#saveFilter" text="Save" />
                        <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                        <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#applyFilter" text="Apply" />
                     </children>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
