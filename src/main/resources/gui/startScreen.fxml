<BorderPane fx:id="rootPane" maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0" prefWidth="775.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng202.group7.controllers.StartScreenController">
   <top>
      <VBox alignment="CENTER" prefHeight="88.0" prefWidth="775.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Welcome to LookOut">
               <font>
                  <Font name="System Bold" size="45.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>

   <center>
      <GridPane hgap="20" maxWidth="500.0" BorderPane.alignment="BASELINE_CENTER">
         <TableView fx:id="table" prefHeight="450.0" prefWidth="250.0" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="2">
            <columns>
               <TableColumn fx:id="listNames" prefWidth="242.0" resizable="false" text="Available Lists" />
            </columns>
         </TableView>
         <VBox prefHeight="250" spacing="15" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <HBox>
               <Button fx:id="newList" onAction="#createList" text="Create new list" />
               <TextField fx:id="newListText" promptText="New list name" />
            </HBox>
            <HBox>
               <Button fx:id="rename" disable="true" onAction="#renameList" text="Rename" />
               <TextField fx:id="renameListText" disable="true" promptText="Updated list name" />
            </HBox>
            <Button fx:id="delete" disable="true" onAction="#deleteList" text="Delete list" />
            <Button fx:id="load" disable="true" onAction="#loadList" text="Load list" />
            <VBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
         </VBox>
      </GridPane>
   </center>
</BorderPane>
